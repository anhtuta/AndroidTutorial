<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bkhn.anhtu.sqlitedemo2.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:hint="enter id..."
            android:id="@+id/txtId"
            android:layout_width="176dp"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="enter name..."
            android:id="@+id/txtName"
            android:layout_width="176dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:hint="enter singer..."
            android:id="@+id/txtSinger"
            android:layout_width="176dp"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="1 = favorite..."
            android:id="@+id/txtFavorite"
            android:layout_width="176dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:onClick="btAddEvent"
        android:text="Add new song"
        android:id="@+id/btAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lvSong"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>
